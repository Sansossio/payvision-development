{
  "name": "payvision-transactions",
  "version": "0.0.0",
  "description": "Transactions service",
  "author": "",
  "license": "MIT",
  "scripts": {
    "docker-init": "docker-compose build && docker-compose up",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon -L --config nodemon-debug.json",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^6.1.1",
    "@nestjs/core": "^6.1.1",
    "@nestjs/platform-express": "^6.1.1",
    "@nestjs/swagger": "^3.0.2",
    "@nestjs/typeorm": "^6.0.0",
    "body-parser": "^1.18.3",
    "class-transformer": "^0.2.0",
    "class-validator": "^0.14.0",
    "dotenv": "^7.0.0",
    "express-rate-limit": "^3.4.0",
    "helmet": "^3.16.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.11",
    "nodemailer": "^6.2.1",
    "pg": "^7.9.0",
    "reflect-metadata": "^0.1.12",
    "request-promise": "^4.2.4",
    "rimraf": "^2.6.2",
    "rxjs": "^6.2.2",
    "swagger-ui-express": "^4.0.2",
    "typeorm": "^0.2.16",
    "typescript": "^3.3.4000"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.1.1",
    "@types/express": "^4.16.0",
    "@types/jest": "^24.0.11",
    "@types/lodash": "^4.14.134",
    "@types/node": "^11.13.7",
    "@types/nodemailer": "^6.2.0",
    "@types/request-promise": "^4.1.44",
    "@types/supertest": "^2.0.7",
    "jest": "^24.7.1",
    "nodemon": "^1.18.3",
    "prettier": "^1.14.2",
    "supertest": "^3.1.0",
    "ts-jest": "^24.0.2",
    "ts-loader": "^5.4.3",
    "ts-node": "^8.1.0",
    "tsconfig-paths": "^3.8.0",
    "tslint": "5.16.0",
    "tslint-lines-between-class-members": "^1.3.1",
    "tslint-sonarts": "^1.9.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
